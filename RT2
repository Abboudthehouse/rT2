          times += `<option>${(h > 12 ? h - 12 : h)}:00 ${h < 12 ? 'AM' : 'PM'}</option>`;
          times += `<option>${(h > 12 ? h - 12 : h)}:30 ${h < 12 ? 'AM' : 'PM'}</option>`;
