    <script>
        // Function to calculate the investment recommendations
        function calculateInvestment() {
            // Get input values
            const investmentType = document.getElementById('investment-type').value;
            const location = document.getElementById('location').value;
            const investmentAmount = parseInt(document.getElementById('investment-amount').value);
            const downPayment = document.getElementById('down-payment').value;

            // Validate the input values
            if (isNaN(investmentAmount) || investmentAmount <= 0) {
                alert('Please enter a valid investment amount.');
                return;
            }

            // Call AI Algorithm (dummy data for now)
            let resultsText = '';
            let properties = [];

            // Simulate property data for now (replace with real data from API/AI later)
            if (investmentType === 'long-term') {
                resultsText = `Based on your investment amount of $${investmentAmount}, we recommend rental properties with a good ROI.`;
                properties = [
                    { name: 'Lakeview Apartments', price: 450000, rent: 2500, roi: 6.5 },
                    { name: 'Downtown Loft', price: 380000, rent: 2000, roi: 7.3 },
                ];
            } else {
                resultsText = `Based on your investment amount of $${investmentAmount}, we suggest looking for properties to flip.`;
                properties = [
                    { name: 'Fixer-Upper Bungalow', price: 300000, estimatedRenovationCost: 50000, estimatedSellPrice: 450000 },
                    { name: 'Old Victorian House', price: 350000, estimatedRenovationCost: 60000, estimatedSellPrice: 500000 },
                ];
            }

            // Show the results section
            const resultsSection = document.getElementById('results');
            const propertyList = document.getElementById('property-list');
            propertyList.innerHTML = `<p>${resultsText}</p>`;

            // Display the properties with ROI or Estimated Sales Price
            properties.forEach((property) => {
                const propertyCard = document.createElement('div');
                propertyCard.classList.add('property-card');
                propertyCard.innerHTML = `
                    <h3>${property.name}</h3>
                    <p>Price: $${property.price.toLocaleString()}</p>
                    ${investmentType === 'long-term' ? `<p>Estimated Rent: $${property.rent.toLocaleString()}</p>` : ''}
                    <p>ROI: ${property.roi ? property.roi + '%' : ''}</p>
                    ${investmentType === 'short-term' ? `<p>Estimated Renovation Cost: $${property.estimatedRenovationCost.toLocaleString()}</p>` : ''}
                    ${investmentType === 'short-term' ? `<p>Estimated Sell Price After Renovation: $${property.estimatedSellPrice.toLocaleString()}</p>` : ''}
                `;
                propertyList.appendChild(propertyCard);
            });

            // Toggle visibility of the results section
            resultsSection.style.display = 'block';
        }
    </script>

